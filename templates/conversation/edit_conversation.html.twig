<div class="conversation-list-item-container">
    {{ form_start(conversation_form,{'method':'POST',
        'class':'conversation-form-container flex-row justify-start box-sizing-border',
        'action': path('update_conversation'),
        'attr':{
            'id': 'conversation_form',
            'data-href': path('update_conversation'),
        }
    }) }}
    <div class="conversation-list-item-container__conversation-title">
        <div class="flex-col justify-start align-start text-align-left form-text-field-container padding-top-sm">

                <div class="flex-col justify-start align-start text-align-left form-text-field-container padding-top-sm">
                    {{ form_label(conversation_form.titre,null,
                        {
                            'label_attr':{'class': 'color-violet font-size-label font-condensed'},
                            'label': 'Nom : '
                        })
                    }}
                    {{ form_widget(conversation_form.titre,{
                        'attr': {
                            'class': 'font-size-text color-blue border-none font-roboto capitalized rounded-border',
                            'placeholder': 'Titre'
                        },
                        'value': conversation_form.titre.vars.value,
                    }) }}
                </div>
        </div>
    </div>
    <ul class="conversation-list-item-container__participants-list">
        {% for participant in conversation.participants %}
            <li class="conversation-list">participant.username</li>
        {% endfor %}
    </ul>
    {% block invitation_sending_form %}
    {% endblock %}
    <div class="flex-col justify-start align-start text-align-left form-text-field-container padding-top-sm">
        {{ form_widget(conversation_form.creer, {
            'label': 'Valider',
            'attr': {
                'class' : 'font-size-link font-alata upper-case color-blue button padding-md profile-update-button'
            }
        }) }}
    </div>
    {{ form_end(conversation_form) }}
</div>
